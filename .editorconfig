# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
charset = utf-8
indent_size = 2
tab_width = 2
max_line_length = 120
quote_type = single

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
